NAME="{{ network_interface }}"
BOOTPROTO=none
DEVICE="{{ network_interface }}"
{% if dns_nameservers is defined %}
{%   for ns in dns_nameservers %}
DNS{{ loop.index }}={{ ns }}
{%   endfor %}
{% endif %}
{%   if ip_gateway is defined %}
GATEWAY={{ ip_gateway }}
{%   endif %}
{%   if ip_address is defined %}
IPADDR={{ ip_address }}
{%   endif %}
{%   if ip_netmask is defined %}
NETMASK={{ ip_netmask }}
{%   endif %}
ONBOOT=yes
DOMAIN={{ dns_search }}
{% if ansible_distribution_major_version == "7"  %}
NM_CONTROLLED=no
{%   endif %}
{% if ansible_distribution_major_version == "8"  %}
NM_CONTROLLED=yes
{%   endif %}
IPV6INIT=no

